import Layout from "../layouts/Layout.astro";
import ContactMe from "../components/ContactMe.astro";
---

<Layout>
    <div class="hero">
        <div class="img">
            <picture>
                <!-- <source media="(min-width: 1200px)" srcset="/images/homepage/desktop/image-homepage-hero.jpg 1110w,
                                /images/homepage/desktop/image-homepage-hero@2x.jpg 2220w" />

                <source media="(min-width: 768px)" srcset="/images/homepage/tablet/image-homepage-hero.jpg 688w,
                                /images/homepage/tablet/image-homepage-hero@2x.jpg 1376w" />

                <source srcset="/images/homepage/mobile/image-homepage-hero.jpg 311w,
                                /images/homepage/mobile/image-homepage-hero@2x.jpg 622w" />

                <img src="/images/homepage/desktop/image-homepage-hero.jpg" alt="" /> -->
                <source media="(min-width: 1200px)" srcset="/images/homepage/desktop/homepage-hero.jpg 1110w,
                                /images/homepage/desktop/homepage-hero@2x.jpg 2220w" />

                <source media="(min-width: 768px)" srcset="/images/homepage/tablet/homepage-hero.jpg 688w,
                                /images/homepage/tablet/homepage-hero@2x.jpg 1376w" />

                <source srcset="/images/homepage/mobile/homepage-hero.jpg 311w,
                                /images/homepage/mobile/homepage-hero@2x.jpg 622w" />

                <img src="/images/homepage/desktop/homepage-hero.jpg" alt="" />
            </picture>
        </div>
        <div class="hero__about">
            <h1 class="h2 h1-lg">Hey, I'm Dustin Durden and I love building websites.</h1>
            <button class="button__primary">
                <span class="button__toggle">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="14">
                        <g fill="none" fill-rule="evenodd" stroke="#5FB4A2">
                            <path d="M0 9l8 4 8-4" />
                            <path opacity=".5" d="M0 5l8 4 8-4" />
                            <path opacity=".25" d="M0 1l8 4 8-4" />
                        </g>
                    </svg>
                </span>
                <span class="button__text">About Me</span>
            </button>
        </div>
    </div>

    <div class="about-me">
        <div class="img">
            <picture>
                <!-- <source media="(min-width: 1200px)" 
                        srcset="/images/homepage/desktop/image-homepage-profile.jpg 540w,
                                /images/homepage/desktop/image-homepage-profile@2x.jpg 1080w"
                        sizes="38w" />

                <source media="(min-width: 768px)" 
                        srcset="/images/homepage/tablet/image-homepage-profile.jpg 281w,
                                /images/homepage/tablet/image-homepage-profile@2x.jpg 562w"
                        sizes="37vw" />

                <source srcset="/images/homepage/mobile/image-homepage-profile.jpg 311w,
                                /images/homepage/mobile/image-homepage-profile@2x.jpg 622w" />

                <img src="/images/homepage/desktop/image-homepage-profile.jpg" alt="" /> -->
                <source media="(min-width: 1200px)" srcset="/images/homepage/desktop/homepage-profile.jpg" />

                <source media="(min-width: 768px)" srcset="/images/homepage/tablet/homepage-profile.jpg 281w" />

                <source srcset="/images/homepage/desktop/homepage-profile.jpg" />

                <img src="/images/homepage/desktop/homepage-profile.jpg" alt="" />
            </picture>
        </div>
        <div class="about-me__content">
            <h2>About Me</h2>
            <p>
                I’m a junior front-end developer looking for a new role in an exciting company. I focus on writing
                accessible HTML, using modern CSS practices and writing clean JavaScript. When writing JavaScript code,
                I mostly use React, but I can adapt to whatever tools are required. I’m based in London, UK, but I’m
                happy working remotely and have experience in remote teams. When I’m not coding, you’ll find me
                outdoors. I love being out in nature whether that’s going for a walk, run or cycling. I’d love you to
                check out my work.
            </p>
            <button class="button__secondary">
                <span class="button__text">Go To Portfolio</span>
            </button>
        </div>
    </div>

    <ContactMe />
</Layout>